<?xml version="1.0" encoding="UTF-8"?>
<BorderPane xmlns:fx="http://javafx.com/fxml">
    <top>
        <Label text="Observaciones del Profesor" />
    </top>
    <center>
        <VBox spacing="20">
            <HBox spacing="10">
                <Label text="Tarea/Trabajo:" />
                <ScrollPane>
                    <!-- Aquí se mostraría el PDF o la imagen -->
                    <ImageView fx:id="workImageView" />
                </ScrollPane>
            </HBox>
            <HBox spacing="10">
                <Label text="Comentarios:" />
                <TextArea fx:id="commentsTextArea" prefHeight="100" />
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10" alignment="center">
            <Button text="Enviar Observación" fx:id="sendButton" />
            <Button text="Editar Observación" fx:id="editButton" />
            <Button text="Subir Archivo" fx:id="uploadButton" />
        </HBox>
    </bottom>
</BorderPane>
